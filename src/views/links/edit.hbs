<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/api/edit/{{link.id}}" method="post">
            <div class="form-group">
              <input
                value="{{link.title}}"
                type="text"
                class="form-control my-3"
                name="title"
                placeholder="Title"
                required
                autofocus
              />
            </div>
            <div class="form-group my-3">
                <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="URL">
            </div>
            <div class="form-group my-3">
                <textarea name="descripcion"rows="2" class="form-control" placeholder="Descripcion">{{link.descripcion}}</textarea>
            </div>
            <div class="form-group d-grid gap-2">
                <button class="btn btn-success btn-block">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>