<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Sing Up</h3>
        </div>
        <div class="card-body">
          <form action="/api/singup" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="fullname"
                placeholder="Full Name"
                class="form-control my-3"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="username"
                placeholder="Username"
                class="form-control my-3"
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                name="password"
                placeholder="Password"
                class="form-control my-3"
              />
            </div>

            <div class="form-group d-grid gap-2">
              <button class="btn btn-success btn-block">Sing up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>